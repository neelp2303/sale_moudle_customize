<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_sale_order_line_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.line.view.form</field>
        <field name="model">code.trade.wizard</field>
        <field name="arch" type="xml">
            <form string="add_sale_order_line_form">

                <group>
                    <field name="order_id"/>
                    <field name="product_id"/>
                    <field name="product_uom_qty"/>
                    <field name="name"/>
                    <field name="price_unit"/>

                </group>
                <footer>
                    <button string="Add Line" type="object" name="action_add_line" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>